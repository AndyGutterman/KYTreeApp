<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/highScoreLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/highScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreLabelTextView"
        android:layout_marginStart="75dp"
        android:layout_marginTop="31dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/streakLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        />


    <TextView
        android:id="@+id/streakTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/streakLabelTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="75dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/clearHighScoreButton"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/clear_my_high_score"
        android:textSize="18sp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/goldenrod_gold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/clearStreakButton"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/clear_my_streak"
        android:textSize="18sp"
        android:layout_below="@id/clearHighScoreButton"
        android:backgroundTint="@color/goldenrod_gold"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/backToMainMenuButton"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/backbutton" />


</RelativeLayout>